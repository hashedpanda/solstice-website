---
import { Icon } from "astro-icon/components";

interface Props {
	title: string;
	description: string;
	icon: string;
	path: string;
}

const { title, description, icon, path } = Astro.props;
---

<li class="block-link">
	<a href={path}>
		<Icon class="block-link-icon" name={icon} />
		<div class="block-link-text">
			<div><b>{title}</b></div>
			<div>{description}</div>
		</div>
	</a>
</li>
<style>
	.block-link {
		background-color: var(--neutral-900);
		border-radius: 0.75rem;

		transition: background-color 0.5s cubic-bezier(0.075, 0.82, 0.165, 1);
	}

	.block-link:hover {
		background-color: var(--accent-950);
	}

	.block-link:active {
		background-color: var(--accent-800);
	}

	.block-link a {
		width: 100%;
		height: 100%;

		padding: var(--spacing-4);

		display: flex;
		align-items: center;
		justify-content: start;
		gap: var(--spacing-2);

		text-decoration: none;

		color: #000;
	}

	.block-link-icon {
		width: 64px;
		height: 64px;
		flex-shrink: 0;
	}

	.block-link-text {
		height: 100%;

		display: flex;
		flex-direction: column;
		gap: var(--spacing-1);
	}
</style>
